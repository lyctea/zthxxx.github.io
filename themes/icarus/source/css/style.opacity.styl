body{
    zoom: 1;
    background-size: cover;
    background-attachment: fixed;
    color: #EFEFEF;
}
body::after{
    content: "";
    display: block;
    position: fixed;
    top: 0;
    left: 0;
    margin: 0;
    padding: 0;
    height: 100%;
    width: 100%;
    background: rgba(0,0,0,0.55);
    z-index: -1;
}
.article-inner, #comments, .archive-article, .timeline-row .content {
    background: rgba(255,255,255,0.15);
    box-shadow: 0 0 0 8px rgba(255,255,255,0.4);
    color: #FAFAFA;
}
#profile .inner .base-info #avatar {
    box-shadow: 0 0 0 8px rgba(255,255,255,0.4);
    -webkit-border-radius: 500px;
    -moz-border-radius: 500px;
    border-radius: 500px;
}
#profile .inner .base-info #avatar:hover {
    box-shadow: 0 0 0 5px rgba(255, 255, 255,0.3);
    transition: box-shadow linear 0.2s;
}
html, body, div, span, applet, object, iframe, h1, h2, h3, h4, h5, h6, p, blockquote, pre, a, abbr, acronym, address, big, cite, code, del, dfn, em, img, ins, kbd, q, s, samp, small, strike, strong, sub, sup, tt, var, dl, dt, dd, ol, ul, li, fieldset, form, label, legend, table, caption, tbody, tfoot, thead, tr, th, td {
    color: #EFEFEF;
}
p {
    line-height: 30px;
    letter-spacing: 0.7px;
    word-break: break-all;
    text-shadow: 0px 1px 5px #000;
}
.header-inner #logo .site-title, a.article-title:visited, .widget ul li a, .widget ol li a, .widget ul .category-list-child a, .widget ol .category-list-child a, #recent-post li .item-inner .item-title a, #header a, #header a:visited, .search-form-submit, .fa, .layout-wrap-inner.list-categories ul li a, .layout-wrap-inner.list-categories ul .category-list-child a, .archive-article-header a, .layout-wrap-inner.tag-cloud a, .timeline-row .content h1 a, .archive-article-header a:visited, .layout-wrap-inner.tag-cloud a:visited, .timeline-row .content h1 a:visited, .article-header .article-title {
    color: #EFEFEF;
}
#header, #profile .inner {
    background: none;
    box-shadow: none;
}
