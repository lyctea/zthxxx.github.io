body{
    zoom: 1;
    background-size: cover;
    background-attachment: fixed;
}
body::after{
    content: "";
    display: block;
    position: fixed;
    top: 0;
    left: 0;
    margin: 0;
    padding: 0;
    height: 100%;
    width: 100%;
    background: rgba(0,0,0,0.4);
    z-index: -1;
}
#header, #profile .inner {
    background: none;
    box-shadow: none;
}
#profile .inner .base-info #avatar {
    box-shadow: 0 0 0 8px rgba(255,255,255,0.4);
    -webkit-border-radius: 500px;
    -moz-border-radius: 500px;
    border-radius: 500px;
}
#profile .inner .base-info #avatar:hover {
    box-shadow: 0 0 0 5px rgba(255,255,255,0.3);
    transition: box-shadow linear 0.2s;
}
.timeline-row .content {background-color: rgba(0,0,0,0.5);}
#profile.card {
    background-color: rgba(0,0,0,0.7);
    box-shadow: 0 0 0 8px rgba(255,255,255,0.4);
}
html, body, div, span, applet, object, iframe, h1, h2, h3, h4, h5, h6, p, blockquote, pre, a, abbr, acronym, address, big, cite, code, del, dfn, em, img, ins, kbd, q, s, samp, small, strike, sub, sup, tt, var, dl, dt, dd, ol, ul, li, fieldset, form, label, legend, table, caption, tbody, tfoot, thead, tr, th, td {
    color: #EFEFEF;
}
.header-inner #logo .site-title, a.article-title:visited, .article-footer a, .article-meta a, .widget ul li a, .widget ol li a, .widget ul .category-list-child a, .widget ol .category-list-child a, #recent-post li .item-inner .item-title a, #header a, #header a:visited, .search-form-submit, .fa, .layout-wrap-inner.list-categories ul li a, .layout-wrap-inner.list-categories ul .category-list-child a, .archive-article-header a, .archive-article-header a:visited, .layout-wrap-inner.tag-cloud a, .layout-wrap-inner.tag-cloud a:visited, .article-header .article-title, #ds-thread #ds-reset .ds-comment-body p, #recent-post li .item-inner .item-date, .category-list-count, .tag-list-count, .archive-list-count, #profile .inner .base-info #location, #search-form-wrap .search-form .search-form-submit:focus, #page-nav a {
    color: #EFEFEF;
}
#page-nav .current {color: #FFFFFF;}
.article-entry .caption {
    color: #DDD;
}
/* Article content style*/
.article-inner, #comments, .archive-article {
    background: rgba(255,255,255,0.15);
    box-shadow: 0 0 0 8px rgba(255,255,255,0.4);
    color: #FAFAFA;
}
.article-inner, #comments {
    background: rgba(0,0,0,0.3);
}
.article-entry blockquote {
    background: rgba(255,255,255,0.15);
}
p, .article-entry ul ul, .widget ul ul, .article-entry ol ul, .widget ol ul, .article-entry ul ol, .widget ul ol, .article-entry ol ol, .widget ol ol, .article-entry ul, .widget ul, .article-entry ul, .widget ul, .article-entry ol, .widget ol, .article-entry dl, .widget dl {
    line-height: 30px;
    letter-spacing: 0.7px;
    text-shadow: 0px 1px 5px #000;
}
.article-nav-caption, .article-nav-title, .article-entry h1, .article-entry h2, .article-entry h3, .article-entry h4, .article-entry h5, .article-entry h6,
.layout-wrap-inner.tag-cloud a,
.layout-wrap-inner.tag-cloud a:visited,
.layout-wrap-inner.list-categories ul li a, .layout-wrap-inner.list-categories ul .category-list-child a {
    text-shadow: 0px 1px 3px #000;
}
.article-entry a {
    text-shadow: 0px 1px 2px #000;
}
.article-entry h1, .article-entry h2, .article-entry h3, .article-entry h4, .article-entry h5, .article-entry h6 {
    letter-spacing: 0.7px;
}

