.article-share-twitter:before, .article-share-facebook:before, .article-share-pinterest:before, .article-share-google:before {
    color: #444;
}
.article-entry img {
    cursor: pointer;
    border: 5px solid rgba(255, 255, 255, 1);
    box-shadow: 1px 1px 5px rgba(0, 115, 102, 0.95);
    border-radius: 0;
}
/* Article links style */
#header a:hover, #recent-post li .item-inner .item-title a:hover, .widget ul .category-list-child a:hover {
    white-space: nowrap;
    -webkit-transition: 0.2s ease;
    -moz-transition: 0.2s ease;
    -ms-transition: 0.2s ease;
    transition: 0.2s ease;
    color: #38b7ea;
}
#recent-post li .item-inner .item-category a:hover {
    white-space: nowrap;
    -webkit-transition: 0.2s ease;
    -moz-transition: 0.2s ease;
    -ms-transition: 0.2s ease;
    transition: 0.2s ease;
    color: #EFEFEF;
}
.widget ul:not(#recent-post) li a:hover:before, .widget ol:not(#recent-post) li a:hover:before, .widget a:hover, a.article-title:hover {
    color: #38b7ea;
}

/* Search input box style */
.ins-section .ins-search-item .ins-search-preview, .article-more-link a {
    height: auto;
    color: #777;
    line-height: auto;
    letter-spacing: 0;
    text-shadow: none;
}
.ins-section .ins-search-item header, .fa-times-circle:before {
    color: #444;
    text-shadow: 0px 1px 1px #777;
}
#search-form-wrap .search-form .search-form-input::-webkit-input-placeholder {color: #EFEFEF} 
#search-form-wrap .search-form .search-form-input::-moz-placeholder {color: #EFEFEF} 
#search-form-wrap .search-form .search-form-input::-moz-placeholder {color: #EFEFEF} 
#search-form-wrap .search-form .search-form-input::-ms-input-placeholder {color: #EFEFEF} 

